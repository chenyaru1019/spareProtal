function AgencyChange() {
    var v = $.MvcSheetUI.GetControlValue("IsChangeAgency");

    if (v == "是") {
        $(".AgencyDiv").show();
    } else {
        $.MvcSheetUI.SetControlValue("AgencyNumNew", "");
