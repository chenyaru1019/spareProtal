function setFileReadOnly(id) {
    // 隐藏删除按钮
    $("#" + id).find(".files").each(function () {
        $(this).find(".delete-file").hide();
    });
    // 隐藏上传按钮
    $("#" + id).find("form").hide();
    // 隐藏Label
    $("#" + id).parent().find("label").hide();
}
