// 表单验证接口
$.MvcSheet.Validate = function () {

    // 填写申请单环节，设置  必填
    if ($.MvcSheetUI.SheetInfo.ActivityCode == "ActivityConfirm") {
        if (this.Action == "Submit") {
            
            var IsOperateFK = $.MvcSheetUI.GetControlValue("IsOperateFK");
            if (IsOperateFK != "是;") {
                alert("请勾选执行付款！");
                return false;
            }
        }
    }
    return true;
}

